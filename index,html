    <script>
        // JavaScript to calculate totals automatically
        document.addEventListener('DOMContentLoaded', function() {
            // Calculate HMR and KMR totals when opening/closing values change
            document.querySelectorAll('input[type="number"]').forEach(input => {
                input.addEventListener('change', function() {
                    const name = this.name;
                    
                    // Calculate HMR total
                    if (name.startsWith('hmr_open_') || name.startsWith('hmr_close_')) {
                        const baseName = name.split('_').slice(0, 3).join('_');
                        const open = parseFloat(document.querySelector(`input[name="${baseName}_open"]`).value) || 0;
                        const close = parseFloat(document.querySelector(`input[name="${baseName}_close"]`).value) || 0;
                        const total = close - open;
                        document.querySelector(`input[name="${baseName}_total"]`).value = total > 0 ? total.toFixed(1) : '';
                    }
                    
                    // Calculate KMR total
                    if (name.startsWith('kmr_open_') || name.startsWith('kmr_close_')) {
                        const baseName = name.split('_').slice(0, 3).join('_');
                        const open = parseFloat(document.querySelector(`input[name="${baseName}_open"]`).value) || 0;
                        const close = parseFloat(document.querySelector(`input[name="${baseName}_close"]`).value) || 0;
                        const total = close - open;
                        document.querySelector(`input[name="${baseName}_total"]`).value = total > 0 ? total.toFixed(1) : '';
                    }
                    
                    // Calculate total diesel issued
                    if (name.startsWith('diesel_') && !name.includes('total')) {
                        let total = 0;
                        document.querySelectorAll('input[name^="diesel_"]').forEach(dieselInput => {
                            if (!dieselInput.name.includes('total') && !dieselInput.name.includes('opening') && !dieselInput.name.includes('closing')) {
                                total += parseFloat(dieselInput.value) || 0;
                            }
                        });
                        document.querySelector('input[name="diesel_issued_total"]').value = total.toFixed(1);
                    }
                    
                    // Calculate total tires issued
                    if (name.startsWith('tires_') && !name.includes('total')) {
                        let total = 0;
                        document.querySelectorAll('input[name^="tires_"]').forEach(tireInput => {
                            if (!tireInput.name.includes('total') && !tireInput.name.includes('opening') && !tireInput.name.includes('closing')) {
                                total += parseFloat(tireInput.value) || 0;
                            }
                        });
                        document.querySelector('input[name="tire_issued_total"]').value = total;
                    }
                });
            });
        });
    </script>
